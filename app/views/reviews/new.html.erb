<h1>New Review</h1>

<%= form_with(model: [@restaurant, @review]) do |form| %>

  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, (1..5) %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Review' %>
  </div>
<% end %>
